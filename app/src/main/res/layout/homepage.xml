<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/title"
        android:background="@color/green"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#FFFFFF"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/frame_home"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </LinearLayout>

    <!--

    <com.jacky.keshe.view.ButtonLinearLayout
        android:id="@+id/ly_home_btn"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.jacky.keshe.view.ButtonLinearLayout>

    -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:onClick="doClick"
            android:id="@+id/btn_home"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/grey_pressed">
            <ImageView
                android:id="@+id/img_home"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/ic_home_selected"
                />

            <TextView
                android:id="@+id/txt_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_txt_home"
                android:textColor="#ffffff"
                android:textSize="15sp"/>

        </LinearLayout>

        <LinearLayout
            android:onClick="doClick"
            android:id="@+id/btn_order"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/grey_normal">
            <ImageView
                android:id="@+id/img_home_order"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/ic_order_normal"
                />

            <TextView
                android:id="@+id/txt_home_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_txt_order"
                android:textSize="15sp"/>

        </LinearLayout>

        <LinearLayout
            android:onClick="doClick"
            android:id="@+id/btn_mine"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/grey_normal">
            <ImageView
                android:id="@+id/img_home_mine"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/ic_user_normal"
                />

            <TextView
                android:id="@+id/txt_home_mine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_txt_user"
                android:textSize="15sp"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>