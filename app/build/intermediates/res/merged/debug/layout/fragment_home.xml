<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <com.jacky.keshe.view.MyViewFliper
            android:id="@+id/vf_home_guanggao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <com.jacky.keshe.view.DotLinearLayout
            android:id="@+id/dots"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom">

        </com.jacky.keshe.view.DotLinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">
        <EditText
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:hint="@string/edt_home_hint_from"/>
        <ImageView
            android:layout_weight="1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/shouye_exchange"/>

        <EditText
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/edt_home_hint_to"
            android:textSize="22sp"
            android:gravity="right"/>
    </LinearLayout>

    <Button
        android:text="@string/btn_home_date"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_home_date"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:drawableRight="@drawable/shouye_btn_date"/>

    <Button
        android:text="@string/btn_home_search"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/btn_home_search"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/btn_orange_normal"
        android:textColor="#ffffff"
        android:textSize="18sp"/>

    <TextView
        android:layout_marginTop="10dp"
        android:hint="@string/txt_home_recent"
        android:textSize="22sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <Button
        android:text="@string/btn_home_tuangou"
        android:textColor="@color/font_white"
        android:background="@drawable/tuangou_background"
        android:layout_marginTop="10dp"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:id="@+id/button2"
        android:layout_gravity="center" />


</LinearLayout>